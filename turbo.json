{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_ALGOLIA_APP_ID",
    "NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY",
    "NEXT_PUBLIC_ALGOLIA_INDEX_NAME",
    "NEXT_PUBLIC_ALGOLIA_SEARCH_ADMIN_KEY",
    "DATABASE_URL",
    "DIRECT_URL"
  ]
}
