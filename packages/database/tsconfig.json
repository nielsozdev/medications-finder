{
  "extends": "@noz/tsconfig/node.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "sourceMap": true,
    "composite": true,
    "declarationMap": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
