{
    "display": "Scrapers.js",
    "extends": "./base.json",
    "compilerOptions": {
        "strict": false,
        "sourceMap": false,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": [
            "ES2020",
            "DOM",
            "dom.iterable"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/**",
        "dist",
        "build",
        "public",
        ".next",
        "**/.next/**",
        "ideas",
        "**/ideas/**"
    ],
    "include": [
        "src",
        "**/*.ts"
    ]
}
