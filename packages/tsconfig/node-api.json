{
    "display": "Node Api",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "node",
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "include": [
        "src",
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
