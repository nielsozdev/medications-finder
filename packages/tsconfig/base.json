{
  "$schema": "./tsconfig.schema.json",
  "display": "Default",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "importHelpers": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitOnError": true,
    "preserveSymlinks": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "dist",
    ".turbo",
    "**/.turbo/**",
    "build",
    "public",
    ".next",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/public/**",
    "coverage",
    "**/coverage/**",
    ".vscode",
    "**/.vscode/**",
    ".idea",
    "**/.idea/**",
    ".git",
    "**/.git/**",
    ".DS_Store",
    "**/.DS_Store",
    "*.log",
    "**/*.log",
    "yarn.lock",
    "**/yarn.lock",
    "package-lock.json",
    "**/package-lock.json",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "include": [
    "**/*"
  ]
}
